<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.View.CustomerDashboardPage"
             Title="CustomerDashboardPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Customer Info -->
            <Label Text="Customer Information" FontSize="20" FontAttributes="Bold" />
            <Label Text="{Binding Customer.FirstName}" FontSize="16" />
            <Label Text="{Binding Customer.LastName}" FontSize="16" />
            <Label Text="{Binding Customer.Email}" FontSize="14" TextColor="Gray"/>
            <Label Text="{Binding Customer.PhoneNumber}" FontSize="14" TextColor="Gray"/>

            <!-- Accounts -->
            <Label Text="Accounts" FontSize="20" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Customer.Accounts}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10" BackgroundColor="#f5f5f5" Margin="5">
                            <Label Text="{Binding AccountNumber}" FontAttributes="Bold"/>
                            <Label Text="{Binding AccountBalance, StringFormat='Balance: {0:C}'}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Transactions -->
            <Label Text="Transaction History" FontSize="20" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Transactions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10" BackgroundColor="#e0f7fa" Margin="5">
                            <Label Text="{Binding Description}" FontAttributes="Bold"/>
                            <Label Text="{Binding Amount, StringFormat='{0:C}'}" />
                            <Label Text="{Binding TransactionDate, StringFormat='{0:MM/dd/yyyy}'}" FontSize="12" TextColor="Gray"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
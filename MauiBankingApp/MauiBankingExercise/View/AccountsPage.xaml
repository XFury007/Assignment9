<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.AccountsPage"
             Title="Accounts">

    <CollectionView ItemsSource="{Binding Accounts}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
      
                <Grid Padding="10" Margin="10"
                      ColumnDefinitions="*, Auto"
                      RowDefinitions="Auto, Auto">

                    <!-- Account Number (Top Left, Bold) -->
                    <Label Text="{Binding AccountNumber}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           Grid.Row="0" Grid.Column="0" />

                    <!-- Account Balance (Top Right) -->
                    <Label Text="{Binding AccountBalance, StringFormat='Balance: {0:C}'}"
                           FontSize="14"
                           Grid.Row="0" Grid.Column="1"
                           HorizontalOptions="End" />

                    <!-- Customer Name (Bottom Left) -->
                    <Label Text="{Binding Customer.FirstName}"
                           FontSize="14"
                           TextColor="Gray"
                           Grid.Row="1" Grid.Column="0" />

                    <!-- Account Type (Bottom Right) -->
                    <Label Text="{Binding AccountType.Name}"
                           FontSize="14"
                           TextColor="DarkBlue"
                           Grid.Row="1" Grid.Column="1"
                           HorizontalOptions="End" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
